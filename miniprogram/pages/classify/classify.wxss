.flex_row{
  display: flex;
  flex-direction: row;
}
.nav_left{
  width: 25%;
  height:100vh;
  overflow-y:auto; 
  background: #f5f5f5;
  text-align: center;  
}
.nav_left .nav_left_items{  
  height: 40px;   
   line-height: 40px;   
   padding: 6px 0;   
   border-bottom: 1px solid #dedede;   
   font-size: 14px;   
} 
.nav_left .nav_left_items.active{  
  background: #fff;  
  color: #f0145a; 
}
.nav_right{
  width: 75%;
  position: relative;
}
.nav_right .nav_right_top{
  padding-top:20rpx;
  position: fixed;
  top:0;
  right:0;
  width: 75%;
  height:80rpx;
  font-size:30rpx;
  border-bottom: 1px solid #dedede;
  display:flex;
  flex-direction:row;
  white-space: nowrap;
  background: #fff;
  z-index: 99
}
.nav_right_list{
  margin-top:80rpx;
  height:calc(100vh - 80rpx);
}